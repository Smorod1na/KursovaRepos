@model IEnumerable<MyStore.Entity.News>
@{
    ViewBag.Title = "Index";
}

@if (Model.Count() == 0)
{
    <div>
        <h2 class="text-center text-uppercase text-danger">You does not having news</h2>
    </div>
    <div class="container">

        @Html.ActionLink("New news", "CreateNews", new { @class = "btn btn-primary" })

    </div>
}
else
{
    <div class="container">

        @Html.ActionLink("New news", "CreateNews", new { @class = "btn btn-primary btn-lg" })

    </div>
    <h1 class="text-center">Your news</h1>
    <div class="container text-center">
        @foreach (var item in Model)
        {
            <article class="">
                <div class="card ManagerNewsPosition">
                    <div class="row ">
                        <div class="col-md-3">
                            <img src="../../../../Images/News/@item.Pfoto" width="135" class="card-img " alt="...">
                        </div>
                        <div class="col-md-6 my-flexAlign">
                            <div class="card-body">
                                <h3 class="card-title text-red">@item.Name</h3>
                                @if (item.NewsCategory != null)
                                {<p class="card-text">@item.NewsCategory.Name</p>
                            }
                                <p class="card-text">@item.PostDate.ToLongDateString()</p>

                            </div>
                        </div>
                        <div class="col-md-3 my-flexAlign">

                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-primary MyStyleForBttn" })
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-primary MyStyleForBttn" })
                        </div>
                    </div>
                    <a href="~/Areas/Manager/Views/Manager/Index.cshtml">~/Areas/Manager/Views/Manager/Index.cshtml</a>
                </div>
            </article>
        }
    </div>
}